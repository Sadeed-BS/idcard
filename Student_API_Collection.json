	"item": [
		{
			"name": "Authentication (Google OAuth)",
			"description": "Endpoints for user authentication via Google. These URLs should be opened in a browser to start the login flow.",
			"item": [
				{
					"name": "STUDENT: Login with Google",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/students/auth/google",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"students",
								"auth",
								"google"
							]
						},
						"description": "STEP 1: Open this URL in your web browser.\n\nThis will redirect you to Google to sign in. After a successful sign-in, Google will redirect back to the server's callback URL. The server will then process the login/registration and issue a JWT token, which you would normally get from the callback response in a real application."
					},
					"response": []
				},
				{
					"name": "ADMIN: Login with Google",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/auth/google",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"google"
							]
						},
						"description": "STEP 1: Open this URL in your web browser.\n\nThis will redirect you to Google to sign in. After a successful sign-in, Google will redirect back to the server's callback URL. The server will then process the login/registration and issue a JWT token for the admin."
					},
					"response": []
				}
			]
		},
		{
			"name": "Student Routes (Protected)",
			"description": "Endpoints accessible only by a logged-in student.",
			"item": [
				{
					"name": "Get My Profile",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{student_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/students/me",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"students",
								"me"
							]
						},
						"description": "Retrieves the profile information of the currently authenticated student. Requires a student JWT."
					},
					"response": []
				},
				{
					"name": "Update My Profile",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{student_token}}",
									"type": "string"
								}
							]
						},
						"method": "PUT",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"team\": \"Team Cosmos\",\n    \"phoneNumber\": \"9876543210\",\n    \"department\": \"Information Technology\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/students/me",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"students",
								"me"
							]
						},
						"description": "Updates the profile information for the authenticated student. Send only the fields you wish to change. Requires a student JWT."
					},
					"response": []
				},
				{
					"name": "Get My QR Code",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{student_token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/students/me/qrcode",
							"host": [
								"{{base_url}}"
							],
							"path": [
